@model IEnumerable<Joja.Api.Models.ContentPage>

@{
    ViewData["Title"] = "Manage Pages";
}

<div class="container" style="margin-top: 50px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="brand-font">Manage Pages</h1>
        <a asp-action="Create" class="btn-joja-dark">Create New Page</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Slug (URL)</th>
                <th>Last Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Title</td>
                    <td><a href="/p/@item.Slug" target="_blank">/p/@item.Slug</a></td>
                    <td>@item.LastUpdated.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <div style="margin-top: 20px;">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>
