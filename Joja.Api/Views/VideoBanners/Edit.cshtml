@model Joja.Api.Models.VideoBanner

@{
    ViewData["Title"] = "Edit Video Banner";
}

<div class="container" style="margin-top: 50px;">
    <h1 class="brand-font">Edit Video Banner</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="VideoUrl" />
                
                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DisplayOrder" class="control-label">Display Order</label>
                    <input asp-for="DisplayOrder" class="form-control" type="number" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IsActive" class="control-label">Active</label>
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                </div>

                @if (!string.IsNullOrEmpty(Model.VideoUrl))
                {
                    <div class="mb-3">
                        <label class="control-label">Current Video</label><br />
                        <video src="@Model.VideoUrl" controls style="max-height: 300px; border-radius: 8px;"></video>
                    </div>
                }

                <div class="form-group mb-3">
                    <label class="control-label">Change Video (optional)</label>
                    <input type="file" name="VideoFile" class="form-control" accept="video/*" />
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Save Changes" class="btn-joja-dark" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
