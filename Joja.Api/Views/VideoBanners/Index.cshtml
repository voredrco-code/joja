@model IEnumerable<Joja.Api.Models.VideoBanner>

@{
    ViewData["Title"] = "Manage Video Banners";
}

<style>
    .draggable-row {
        cursor: move;
        user-select: none;
    }
    .draggable-row:hover {
        background-color: #f8f9fa;
    }
    .drag-handle {
        cursor: grab;
        color: #999;
        margin-right: 10px;
    }
    .drag-handle:active {
        cursor: grabbing;
    }
</style>

<div class="container" style="margin-top: 50px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="brand-font">Manage Video Banners (Horizontal Carousel)</h1>
        <a asp-action="Create" class="btn-joja-dark">Add New Video</a>
    </div>

    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> These videos will appear in the horizontal scrolling carousel on the homepage. Drag and drop rows to reorder.
    </div>

    <table class="table table-striped table-hover" id="videoBannersTable">
        <thead>
            <tr>
                <th></th>
                <th>Order</th>
                <th>Preview</th>
                <th>Title</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="videoBannersList">
            @foreach (var item in Model) {
                <tr class="draggable-row" data-id="@item.Id">
                    <td class="drag-handle">
                        <i class="fas fa-grip-vertical"></i>
                    </td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <video src="@item.VideoUrl" style="width: 100px; height: 100px; object-fit: cover; border-radius: 4px;" muted></video>
                    </td>
                    <td>@item.Title</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <div style="margin-top: 20px;">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script>
        const tbody = document.getElementById('videoBannersList');
        const sortable = Sortable.create(tbody, {
            animation: 150,
            handle: '.drag-handle',
            onEnd: function (evt) {
                const rows = tbody.querySelectorAll('tr');
                const videoBannerIds = [];
                rows.forEach(row => {
                    videoBannerIds.push(parseInt(row.dataset.id));
                });

                fetch('/VideoBanners/UpdateOrder', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(videoBannerIds)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        rows.forEach((row, index) => {
                            row.querySelector('td:nth-child(2)').textContent = index + 1;
                        });
                    }
                })
                .catch(error => console.error('Error:', error));
            }
        });
    </script>
}
