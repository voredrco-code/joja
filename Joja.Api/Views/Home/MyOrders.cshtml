@model IEnumerable<Joja.Api.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-5" style="margin-top: 50px;">
    <h2 class="brand-font text-center mb-4">My Orders</h2>
    <div class="table-responsive">
        <table class="table table-hover shadow-sm" style="width: 100%; border-collapse: collapse;">
            <thead style="background-color: var(--joja-nude);">
                <tr>
                    <th style="padding: 15px; text-align: left;">Order #</th>
                    <th style="padding: 15px; text-align: left;">Date</th>
                    <th style="padding: 15px; text-align: left;">Status</th>
                    <th style="padding: 15px; text-align: left;">Total</th>
                    <th style="padding: 15px; text-align: left;">Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr style="border-bottom: 1px solid #eee;">
                        <td style="padding: 15px;">@item.Id</td>
                        <td style="padding: 15px;">@item.OrderDate.ToString("dd MMM yyyy")</td>
                        <td style="padding: 15px;">
                            <span class="badge" style="padding: 5px 10px; border-radius: 4px; background-color: @(item.Status == "Delivered" ? "#d4edda" : "#fff3cd"); color: @(item.Status == "Delivered" ? "#155724" : "#856404");">
                                @item.Status
                            </span>
                        </td>
                        <td style="padding: 15px;">@item.TotalAmount.ToString("C")</td>
                        <td style="padding: 15px;">
                             <button class="btn btn-outline-dark btn-sm" style="padding: 5px 10px; border: 1px solid #333; background: none; cursor: pointer;">View Items</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
