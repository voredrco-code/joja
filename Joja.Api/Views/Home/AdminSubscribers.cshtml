@model Joja.Api.Data.ApplicationDbContext
@{
    ViewData["Title"] = "Admin - Subscribers";
}

<div class="container" style="margin-top: 50px;">
    <h1 class="brand-font">Newsletter Subscribers</h1>
    <table class="table" style="width: 100%; margin-top: 20px; border-collapse: collapse;">
        <thead>
            <tr style="background-color: var(--joja-nude);">
                <th style="padding: 10px; text-align: left;">Email</th>
                <th style="padding: 10px; text-align: left;">Subscription Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers) {
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding: 10px;">@customer.Email</td>
                    <td style="padding: 10px;">@customer.CreatedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
