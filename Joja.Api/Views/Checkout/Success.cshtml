@model Joja.Api.Models.Order
@{
    ViewData["Title"] = "Order Placed Successfully";
}

<div class="container" style="margin-top: 80px; text-align: center;">
    <div style="background: white; padding: 40px; border-radius: 8px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); display: inline-block; max-width: 600px;">
        <i class="fas fa-check-circle" style="font-size: 5rem; color: #4CAF50; margin-bottom: 20px;"></i>
        <h1 class="brand-font" style="color: #333;">Thank You!</h1>
        <p style="font-size: 1.2rem; margin-bottom: 30px;">Your order has been placed successfully.</p>
        
        <div style="background: #f9f9f9; padding: 20px; border-radius: 4px; margin-bottom: 30px; text-align: left;">
            <p><strong>Order ID:</strong> #@Model.Id</p>
            <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
            <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
            @if(Model.PaymentMethod == "InstaPay" || Model.PaymentMethod == "Wallet")
            {
                <p style="color: #D71920; font-weight: bold;">Reminder: Please send the payment screenshot to our WhatsApp if you haven't already.</p>
            }
        </div>

        <a asp-controller="Home" asp-action="Index" class="btn-primary" style="background-color: #333;">Back to Home</a>
    </div>
</div>
