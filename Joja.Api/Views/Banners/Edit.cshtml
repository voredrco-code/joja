@model Joja.Api.Models.Banner

@{
    ViewData["Title"] = "Edit Banner";
}

<div class="container" style="margin-top: 50px;">
    <h1 class="brand-font">Edit Banner</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" />
                <input type="hidden" asp-for="VideoUrl" />
                <input type="hidden" asp-for="BannerType" />
                
                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Subtitle" class="control-label"></label>
                    <input asp-for="Subtitle" class="form-control" />
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LinkUrl" class="control-label">Link URL</label>
                    <input asp-for="LinkUrl" class="form-control" />
                    <span asp-validation-for="LinkUrl" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DisplayOrder" class="control-label">Display Order</label>
                    <input asp-for="DisplayOrder" class="form-control" type="number" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                @if (Model.BannerType == "Image" && !string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-3">
                        <label class="control-label">Current Image</label><br />
                        <img src="@Model.ImageUrl" class="img-fluid" style="max-height: 200px; border-radius: 8px;" />
                    </div>
                }
                else if (Model.BannerType == "Video" && !string.IsNullOrEmpty(Model.VideoUrl))
                {
                    <div class="mb-3">
                        <label class="control-label">Current Video</label><br />
                        <video src="@Model.VideoUrl" controls style="max-height: 200px; border-radius: 8px;"></video>
                    </div>
                }

                <div class="form-group mb-3">
                    <label class="control-label">Change Image</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                    <small class="text-muted">Or upload video instead:</small>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Change Video</label>
                    <input type="file" name="VideoFile" class="form-control" accept="video/*" />
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Save Changes" class="btn-joja-dark" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
